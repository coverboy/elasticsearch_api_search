{
  "name": "ElasticSearch API Search",
  "version": "0.0.2",
  "description": "Stick to specific ES Version while searching.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/es_16.png",
      "32": "images/es_32.png",
      "48": "images/es_48.png",
      "128": "images/es_128.png"
    }
  },
  "icons": {
    "16": "images/es_16.png",
    "32": "images/es_32.png",
    "48": "images/es_48.png",
    "128": "images/es_128.png"
  },
  "manifest_version": 2
}
